<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layoutDirection="ltr"
    android:padding="3dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white_color"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calendar"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:id="@+id/create_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25/06/19"
                android:textSize="9dp"
                />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/upper_relativ_layout">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/post_profile_image"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_user"
                app:civ_border_color="#000"
                app:civ_border_width="1dp"/>
            <TextView
                android:id="@+id/post_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"
                android:text="Lena gonsales"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/post_profile_image"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/acme_regular"/>

            <TextView
                android:id="@+id/post_publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"
                android:text="14:20"
                android:textColor="@android:color/black"
                android:textSize="9sp"
                android:layout_toEndOf="@+id/post_profile_image"
                android:layout_below="@+id/post_profile_name"
                android:fontFamily="@font/acme_regular"
                android:visibility="invisible"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="17dp"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_placeholder"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/post_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:text="Barcelona"
                    android:textSize="13sp"
                    android:fontFamily="@font/acme_regular" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/post_publish_time"
                android:layout_toEndOf="@+id/post_profile_name">

            <TextView
                android:id="@+id/headline_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Who into "
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/hobby_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tennis"
                    android:textSize="20sp"
                    android:padding="2dp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0.3dp"
                    android:background="@color/grey">

                </LinearLayout>
            </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upper_relativ_layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:id="@+id/post_description"
                android:text="tennis as I do.. I've got the all equipment (table balls and bet's) "
                android:textSize="15sp"
                android:maxLines="7"/>
            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/post_chat_btn"
                android:src="@drawable/ic_chat_icon_selected"
                android:background="@color/transparent"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/post_description"
                />
        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>