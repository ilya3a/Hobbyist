<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_margin="5dp"
    android:layoutDirection="ltr"
    android:padding="3dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white_color"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">
            <TextView
                android:id="@+id/create_date_for_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_test"
                android:textSize="9dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_calendar" />


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/upper_relativ_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/post_profile_image_for_map"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_avatar_man"
                app:civ_border_color="#000"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/post_profile_name_for_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="17dp"
                android:layout_toEndOf="@+id/post_profile_image_for_map"
                android:fontFamily="@font/acme_regular"
                android:text="@string/test"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/post_publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/post_profile_name"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/post_profile_image"
                android:fontFamily="@font/acme_regular"
                android:text="14:20"
                android:textColor="@android:color/black"
                android:textSize="9sp"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_marginTop="17dp">
                <TextView
                    android:id="@+id/post_city_for_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/acme_regular"
                    android:text="@string/test"
                    android:textSize="13sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_placeholder"
                    android:layout_marginStart="5dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/post_profile_name_for_map"
                android:layout_toEndOf="@+id/post_profile_name_for_map">

                <TextView
                    android:id="@+id/headline_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Who into "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hobby_name_for_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="@string/test"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upper_relativ_layout">

            <TextView
                android:id="@+id/post_description_for_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:maxLines="7"
                android:text="@string/test_long"
                android:textSize="15sp" />

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/post_chat_btn_for_map"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:layout_below="@+id/post_description_for_map"
                android:layout_alignParentStart="true"
                android:background="@color/transparent"
                android:src="@drawable/ic_chat_icon_selected" />
        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>