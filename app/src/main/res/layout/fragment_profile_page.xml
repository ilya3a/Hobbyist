<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:src="@drawable/ic_edit_black_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:src="@drawable/ic_exit" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Fragments.ProfilePageFragment">

            <RelativeLayout
                android:id="@+id/upper_layout"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:id="@+id/blur_test"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleX="5"
                    android:scaleY="5" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilePhoto_iv"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:clickable="false"
                    android:padding="0.1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_avatar_man"
                    app:civ_border_color="#FFf"
                    app:civ_border_width="2dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/profilePhoto_iv"
                    android:layout_toEndOf="@+id/profilePhoto_iv"
                    android:src="@drawable/ic_edit"
                    android:id="@+id/picture_edit_image"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profilePhoto_iv"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/acme_regular"
                        android:gravity="center"
                        android:text="Thomas Schneider"
                        android:textColor="@color/tab_color"
                        android:textSize="22dp" />

                    <EditText
                        android:id="@+id/name_change_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thomas Schneider"
                        android:textSize="18sp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/last_name_change_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thomas Schneider"
                        android:textSize="18sp"
                        android:visibility="gone" />
                </LinearLayout>


            </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/upper_layout"
    android:id="@+id/second_liniar2">



    <LinearLayout
        android:id="@+id/second_liniar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upper_layout"
        android:background="#ffff"
        android:orientation="horizontal"
        tools:ignore="NotSibling">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/number_of_posts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5"
                android:textColor="#009293"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/acme_regular"
                        android:gravity="center"
                        android:text="Posts"
                        android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#7E7E7E"
            android:padding="0.1dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/number_of_hobbys"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="7"
                android:textColor="#009293"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/channel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/acme_regular"
                        android:gravity="center"
                        android:text="Hobbys"
                        android:textColor="#000" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        android:id="@+id/post_edit_image"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:visibility="gone"
        />
</RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/second_liniar2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#7E7E7E"
                    android:padding="0.1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/acme_regular"
                        android:padding="20dp"
                        android:text="Age"
                        android:textSize="15dp"
                        android:textStyle="italic|bold" />

                    <EditText
                        android:id="@+id/age_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:inputType="textEmailAddress"
                        android:padding="16dp"
                        android:text="font test"
                        android:fontFamily="@font/acme_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#7E7E7E"
                    android:padding="0.1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="0.3"
                        android:padding="20dp"
                        android:text="City"
                        android:textSize="15dp"
                        android:fontFamily="@font/acme_regular"
                        android:textStyle="italic|bold"/>

                    <EditText
                        android:id="@+id/city_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:inputType="textEmailAddress"
                        android:padding="16dp"
                        android:fontFamily="@font/acme_regular"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#7E7E7E"
                    android:padding="0.1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/acme_regular"
                        android:padding="20dp"
                        android:text="Gender"
                        android:textSize="15dp"
                        android:textStyle="italic|bold"/>

                    <EditText
                        android:id="@+id/gender_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:inputType="textEmailAddress"
                        android:padding="16dp"
                        android:fontFamily="@font/acme_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#7E7E7E"
                    android:padding="0.1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/notification_layout">

                    <TextView
                        android:id="@+id/notif_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="0.5"
                        android:padding="20dp"
                        android:text="Notification"
                        android:textSize="15dp"
                        android:fontFamily="@font/acme_regular"
                        android:textStyle="italic|bold"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/notif_sw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="70dp"
                            android:checked="true"
                            android:gravity="center"
                            android:textColor="@color/tab_color" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#7E7E7E"
                    android:padding="0.1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Hobby's"
                        android:textSize="18dp"
                        android:fontFamily="@font/acme_regular"
                        android:textStyle="bold|italic" />

                    <com.nex3z.flowlayout.FlowLayout
                        android:id="@+id/flow_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:padding="5dp"
                        app:flChildSpacing="10dp"
                        app:flChildSpacingForLastRow="5dp"
                        app:flFlow="true"
                        app:flMaxRows="4"
                        app:flRowSpacing="5dp" />

                    <LinearLayout
                        android:id="@+id/add_hobbys_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">
                        <android.support.design.button.MaterialButton

                            android:id="@+id/add_btn"
                            style="@style/AppTheme.RoundedCornerMaterialButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="3dp"
                            android:text="Add"
                            android:textAllCaps="false"
                            app:cornerRadius="10dp"
                            app:icon="@drawable/ic_add_black_24dp"
                            app:iconGravity="textStart" />

                        <AutoCompleteTextView
                            android:id="@+id/auto_complete_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1" />



                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>